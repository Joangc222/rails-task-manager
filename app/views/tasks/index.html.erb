<h1> List of tasks </h1>

<ul>
<% @tasks.each do |task| %>
  <li>
    <%= task.completed ? "[X]" : "[ ]" %>
    <%= link_to task.title, task_path(task) %>
    <%= link_to "Delete #{task.title}",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
  </li>
<% end %>
</ul>
